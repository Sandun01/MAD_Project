<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/org_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Organization Name"
            android:textAlignment="center"
            android:textColor="@color/colorWoofcareOrgName"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/admin_conNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/org_name"
            android:gravity="center_horizontal"
            android:text="Contact Number: "
            android:textAlignment="center"
            android:textColor="@color/colorBtnblack"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/admin_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/admin_conNo"
            android:gravity="center_horizontal"
            android:text="Location: "
            android:textAlignment="center"
            android:textSize="15dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>